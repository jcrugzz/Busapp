!!!
html
 head
  
  meta(charset='utf8')
  meta(name='viewport', content='width=device-width', initial-scale='1.0')
  link(rel='stylesheet', href='public/stylesheets/bootstrap.css');
  link(rel='stylesheet', href='public/stylesheets/bootstrap-responsive.css')
  link(rel='stylesheet', href='public/stylesheets/general.css')
  script(src='http://code.jquery.com/jquery-1.9.1.min.js')
  script(src='http://code.jquery.com/jquery-migrate-1.1.1.min.js')
  style
    html,
    body {
    height: 100%;
    /* The html and body elements cannot have any padding or margin. */
    }

    /* Wrapper for page content to push down footer */
    #wrap {
    min-height: 100%;
    height: auto !important;
    height: 100%;
    /* Negative indent footer by it's height */
    margin: 0 auto -60px;
    }

    /* Set the fixed height of the footer here */
    #push,
    #footer {
    height: 60px;
    }
    #footer {
    background-color: #f5f5f5;
    }

    /* Lastly, apply responsive CSS fixes as necessary */
    @media (max-width: 767px) {
    #footer {
    margin-left: -20px;
    margin-right: -20px;
    padding-left: 20px;
    padding-right: 20px;
    }
    }

    .footers {
    border-left: 1px solid #CCC;
    padding-left: 3px;
    &:first-child {
    border-left: none;
    }

    }

    .noborder {
    border: none;
    }
  script(src='/public/javascripts/bootstrap.js')
  title #{title}
 body
  // BEGIN NAVBAR
  div#wrap
   div.padd
    div.navbar.navbar-inverse.navbar-fixed-top
     div.navbar-inner
      div.container
       
       button(type='button', class='btn btn-navbar', data-toggle='collapse', data-target='.nav-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
       
       a(class='brand', href='/index.html') Find My Route
 
       div.nav-collapse.collapse
 
        // MAIN LINKS
        ul.nav
         li.active
          a(href='/index.html') Home
         li
          a(href='/about.html') About
         li
          a(href='#') Contact
         
         // DROPDOWN 
         li.dropdown
          a(href='#', class='dropdown-toggle', data-toggle='dropdown') Dropdown 
           b(class='caret')
 
          ul.dropdown-menu
           li
            a(href='#') Action
           li
            a(href='#') Action
           li
            a(href='#') Action
           li
            a(href='#') Action
           li.divider
           li
            a(href='#') Action
 
        // SIGN IN FORM
        if (!isLoggedIn)
         form(class='navbar-form pull-right', method='post', action='/session.html')
          input(class='span2', type='text', placeholder='Email', name='user[email]')
          input(class='span2', type='password', placeholder='Password', name='user[password]')
          button(type='submit', class='btn btn-primary', style='margin-right: 3px;') Sign in
          a('href=/register.html', class='btn btn-primary') Register

        // USER IS LOGGED IN 
        if (isLoggedIn)
         div.btn-group.pull-right
          a(class='btn dropdown-toggle btn-primary', data-toggle='dropdown', href='#') #{userName}  
           span.caret
          ul.dropdown-menu
           li
            a Nothing
           li
            a Nothing
           li.divider
           li
            a(href='/session.html') Log Out

   // END NAVBAR
   yield
   
  div#footer
   div.container
    div.row-fluid
     span(class='muted credit', style='float: left;')
      ul(style='list-style-type: none;')
       li &copy; Know Your Route
       li Powered by Next-Gen &middot; Mappings &reg;

     span(class='muted credit pull-right')
      ul(style='list-style-type: none; display: inline-block')
       li(style='display: inline-block', class='') About
       li(style='display: inline-block', class='footers') Help
       li(style='display: inline-block', class='footers') Legal