exports.isLoggedIn = function(req, res) {
 db.users.find({'rememberToken': req.cookies.rememberToken}, function(err, foundUser) {
    if (err) { return res.locals.isLoggedIn = false; next(); }

    if (foundUser[0].length === 0) {
      return res.locals.isLoggedIn = false;
      next();
    } else {
      return res.locals.isLoggedIn = true;
      next();
    }
  });
}